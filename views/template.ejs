
<style>
     tr {
      text-align: right;
      font-size: 1.5rem;
     }  

     td, th {
      border: 1px solid #ddd;
      padding: 8px;
     }

     tr:nth-child(even){background-color: #c5c4c7;}

     tr:hover {background-color: rgb(9, 11, 105);}

     th {
      font-size: 1.5rem;
      padding-top: 12px;
      padding-bottom: 12px;
      text-align: center;
      background-color: #0c8156;
      color: white;
      }
      
  </style>




  <body>
   <div style="width: 85%; margin: 0 7.5%;">
     
          <h1><%- `kwh Usage for ${dev}` %></h1> 
          
          <table >
            <tr>
                    <th>Date</th>
                    <th>KWH</th>
                
            </tr>

            <% for(var i =0; i< mdl.length; i++){ %> 
                    <tr>
                        <td><%- mdl[i].date %> </td>
                        <td><%- mdl[i].kwh %></td>
                    </tr>
            <% } %> 
          </table>     
   </div>
  </body>
